@{
    ViewBag.Title = "Index";
}
<script type="text/javascript">
    function OnBegin() {
        alert("Происходит оправка запроса");
    }

    function OnSuccess(data) {
        alert("Запрос выполнен успешно. Получены следующие данные: \n" + data);
    }
</script>

<div>
    @using (Ajax.BeginForm("SearchBooks", new AjaxOptions { UpdateTargetId = "results", LoadingElementId = "loading", LoadingElementDuration = 1000,
        Confirm = "Ну что)), выполнить AJAX-запрос?",
        OnBegin = "OnBegin",
        OnSuccess  = "OnSuccess"
    }))
    {
        <input type="text" name="name" />
        <input type="submit" value="Поиск" />
    }
        <img id="loading" src="@Url.Content("~/Content/Images/loader.gif")" style="display:none" />
    <div id="results"></div>
</div>
@Scripts.Render("~/scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")


